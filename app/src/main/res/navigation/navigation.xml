<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/userFragment">

    <fragment
        android:id="@+id/userFragment"
        android:name="org.d3if3136.assessment02.ui.UserFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_user" >
        <action
            android:id="@+id/action_userFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_userFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="org.d3if3136.assessment02.ui.ListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_list" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3if3136.assessment02.ui.AboutFragment"
        android:label="@string/tentang_aplikasi"
        tools:layout="@layout/fragment_about"/>
</navigation>